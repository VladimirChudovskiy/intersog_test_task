                "title": "Author Resource",
                "description": "Author resource",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "F. Scott Fitzgerald"
                    },
                    "books_count": {
                        "type": "integer",
                        "example": 5
                    }
                },
                "type": "object"
            },
            "BookResource": {
                "title": "Book Resource",
                "description": "Book resource",
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "The Great Gatsby"
                    },
                    "description": {
                        "type": "string",
                        "example": "A novel by F. Scott Fitzgerald"
                    },
                    "authors": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/AuthorResource"
                        }
                    },
                    "published_date": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2021-01-01T00:00:00.000000Z"
                    }
                },
                "type": "object"
            }
        }
